@model IEnumerable<ServiceRequest>

<h2>Service Request Status</h2>

<ul>
    @foreach (var request in Model)
    {
        <li>
            <strong>Category:</strong> @request.Category<br />
            <strong>Issue ID:</strong> @request.IssueId<br />
            <strong>Description:</strong> @request.Description<br />
            <strong>Supporting Files:</strong> @string.Join(", ", request.SupportingFiles)<br />
            <a href="@Url.Action("ViewDetails", "ServiceRequests", new { id = request.IssueId })">View Details</a>
        </li>
    }
</ul>
